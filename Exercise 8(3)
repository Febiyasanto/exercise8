package URK24CS1263;

import java.util.Scanner;

// Thread to display multiplication table
class TableThread extends Thread {
    private int num;

    public TableThread(int num) {
        this.num = num;
    }

    @Override
    public void run() {
        System.out.println("\nMultiplication Table of " + num + ":");
        for (int i = 1; i <= 10; i++) {
            System.out.println(num + " x " + i + " = " + (num * i));
            try {
                Thread.sleep(2000); // 2 seconds delay
            } catch (InterruptedException e) {
                System.out.println(e);
            }
        }
    }
}

// Thread to display divisors (factors)
class DivisorThread extends Thread {
    private int num;

    public DivisorThread(int num) {
        this.num = num;
    }

    @Override
    public void run() {
        System.out.println("\nDivisors of " + num + ":");
        for (int i = 1; i <= num; i++) {
            if (num % i == 0) {
                System.out.println(i);
                try {
                    Thread.sleep(2000); // 2 seconds delay
                } catch (InterruptedException e) {
                    System.out.println(e);
                }
            }
        }
    }
}

public class Table_Divisor_Threads {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter a number: ");
        int number = sc.nextInt();

        // Create thread objects
        TableThread tableThread = new TableThread(number);
        DivisorThread divisorThread = new DivisorThread(number);

        // Start both threads
        tableThread.start();
        divisorThread.start();

        sc.close();
    }
}
